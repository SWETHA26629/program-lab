#include<stdio.h>
void main()
   {
      int a[50],i,n,sum=0;
      float avg;
      primtf("enter the number of elements \n");
      scanf("%d",&n);
      printf("enter the elements one by one\n");
      for(i=0;i<n;i++)
      scanf("%d",&a[i]);
      printf("the elements are\n");
      for(i=0;i<n;i++)
      printf("%d",a[i]);
      for(i=0;i<n;i++)
         {
            sum=sum+a[i];
         }
      avg=sum/n;
      printf("the sum of the elements are %d\n", sum);
      printf("the average is %f\n", avg);
   }   

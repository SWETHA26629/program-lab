#include<stdio.h>
struct distance
    {
       int d1,d2;
    }p;
void main()
    {
       float sum;
       printf("enter the distance between first two points\n");
       scanf("%d",&p. d1);
       printf("enter the distance between other two points\n");
       scanf("%d",&p. d2);
       sum=p.d1+p.d2;
       printf("the total distance between the points%f",sum);
    }   

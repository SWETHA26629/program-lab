#include<stdio.h>
int main()
   {
      char str[20];
      int i,n,count=0;
      printf("enter a string\n");
      gets(str);
      n=strlen(str);
      for(i=0;i<n/2;i++)
         {
            if (str[i]==str[n-i-1])
               {
                  count++;
               }
         }
      if(count==i)
        {
          printf("the entered string is palindrome\n");
        }
     else
       {
          printf("the entered string is not palindrome");
       }
     return 0;
  }   
